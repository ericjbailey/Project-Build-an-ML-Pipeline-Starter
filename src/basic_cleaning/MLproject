name: basic_cleaning
conda_env: conda.yml 

entry_points:
  main:
    parameters:

      input_artifact:
        description: Initial artifact to be cleaned
        type: string

      output_artifact:
        description: Output artifact for cleaned data
        type: string

      output_type:
        description: Type of the output dataset
        type: string

      output_description:
        description: Description of the output dataset
        type: string

      min_price:
        description: Minimum house price to be considered
        type: float
        default: 10.0

      max_price:
        description: Maximum house price to be considered
        type: float
        default: 350.0 

    command: "python run.py --input_artifact {input_artifact} --output_artifact {output_artifact} --output_type {output_type} --output_description {output_description} --min_price {min_price} --max_price {max_price}"